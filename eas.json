{
	"cli": {
		"version": ">= 0.55.1"
	},
	"build": {
		"development": {
			"developmentClient": true,
			"distribution": "internal",
			"android": {
				"buildType": "apk"
			},
			"ios": {
				"simulator": true
			}
		},
		"preview": {
			"distribution": "internal",
			"android": {
				"buildType": "apk"
			},
			"ios": {
				"simulator": true
			}
		},
		"production": {
			"distribution": "store",
			"android": {
				"buildType": "apk"
			},
			"ios": {
				"enterpriseProvisioning": "adhoc"
			}
		}
	},
	"submit": {
		"production": {
			"ios": {
				"appleId": "your-apple-id@example.com",
				"ascAppId": "your-app-id"
			}
		}
	}
}
